<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/mainBackground</item>

        <item name="android:textColorPrimary">@color/white</item>
        <item name="searchViewStyle">@style/AppTheme.MySearchView</item>
        <item name="autoCompleteTextViewStyle">@style/AppTheme.AutoCompleteTextView.SearchView</item>

        <item name="android:textViewStyle">@style/AppTheme.MyTextView</item>

    </style>

    <!-- Styles -->
    <style name="OverFlow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:color">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <!-- Autocomplete SearchView-->
    <style name="AppTheme.AutoCompleteTextView.SearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/lightGray</item>
    </style>

    <style name="AppTheme.MySearchView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="closeIcon">@drawable/ic_close</item>
        <item name="searchHintIcon">@drawable/ic_search</item>
        <item name="searchIcon">@drawable/ic_search</item>
    </style>

    <!--TextViews-->
    <style name="AppTheme.MyTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.MyTextViewMedium" parent="android:Widget.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headerText" parent="AppTheme.MyTextViewMedium">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="labelText" parent="AppTheme.MyTextView">
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:textColor">@color/normalGray</item>
    </style>
    <!--divider text-->
    <style name="DividerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainBackground</item>
        <item name="android:padding">@dimen/spacing_normal</item>
        <item name="android:drawablePadding">@dimen/spacing_normal</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <!--Wimp Icons-->
    <style name="AppTheme.WimpIcons">
        <item name="fontPath">fonts/WiMP-Icons.ttf</item>
    </style>


</resources>